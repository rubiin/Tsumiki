{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "rangeStrategy": "bump",
    "labels": [
        "dependencies"
    ],
    "extends": [
        "config:recommended",
        "schedule:weekly"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchManagers": [
                "pip_requirements"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "Python dependencies",
            "enabled": true
        }
    ]
}
