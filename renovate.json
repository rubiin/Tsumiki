{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Group Python packages together.",
	"extends": ["config:recommended"],
	"labels": ["dependencies"],
	"packageRules": [
		{
			"matchCategories": ["python"],
			"matchUpdateTypes": [
				"major",
				"minor",
				"patch",
				"rollback",
				"replacement"
			],
			"groupName": "Python packages",
			"groupSlug": "python"
		}
	]
}
